<%- include('../componentLayout/adminMenu') %> 

<h2 class="page-title mt-3 mb-3 d-flex justify-content-center" >Create Campaign</h2>
<a href="/adminPage/campaigns" class="btn btn-dark ">Back to all campaigns</a>
<br><br>

<form action="/adminPage/createCampaign" method="post">
    <div class="form-group">
        <label for="">Title</label>
        <input type="text" name="title" id="" value=" " class="form-control" placeholder="Enter email" required="true" >
    </div>
    <div class="form-group">
        <label for="">Content</label>
        <textarea name="content" id="ta" cols="30" rows="10"></textarea>
    </div>
    <div class="form-group">
        <label for="">Category</label>
        <select name="category" id="" class="form-control">
             <% if(categories != ''){%> <% categories.forEach(function(category, index){ %>
                <option value="<%= category._id %>"><%= category.category %></option>
              <% }) %> 
        <% } %>
        </select>
    </div>
    <div class="form-group">
        <label for="">Start date</label>
        <input type="datetime-local" name="first_closure" id="" class="form-control"
    </div>
    <div class="form-group">
        <label for="">End date</label>
        <input type="datetime-local" name="final_closure" id="" class="form-control">
    </div>
    <button class="btn btn-dark ">Submit</button>
</form>
<%- include('../componentLayout/footer')  %> 
<script>
    let dateInput = document.getElementById("start-date");
    dateInput.min = new Date().toISOString('yyyy-mm-dd').split(".")[0];
    let dateInput2 = document.getElementById("start-date2");
    dateInput2.min = new Date().toISOString('yyyy-mm-dd').split(".")[0];
</script>

